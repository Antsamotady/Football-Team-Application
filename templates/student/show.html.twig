                    body: JSON.stringify({
                        scoreId: scoreId,
                        newScore: scoreInput,
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    const targetSelector = `a[data-bs-target="#kt_modal_edit_student_score_${scoreId}"]`;
