        const submitButtons = document.querySelectorAll('#score_edit');

        submitButtons.forEach(button => {
            button.addEventListener('click', (event) => {
                event.preventDefault();
                
                const scoreId = button.getAttribute('data-score-id');
                const elem0 = document.querySelector(`div[data-score-id="${scoreId}"]`);
                const scoreInput = elem0.querySelector('input').value;

                const url = "{{ path('score_update') }}";

                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
