{% extends 'dashboard-base.html.twig' %}

{% block favicon %}<link rel="shortcut icon" href="../assets/media/logos/PI-favicon.gif" />{% endblock %}

{% block title %}{{ template_title }}{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div hidden>
        {% block logo %}<img alt="Logo" src="../assets/media/logos/logo_pi-planner.png" class="h-25px logo" />{% endblock %}
    </div>


    {% for notice in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ notice }}</div>
    {% endfor %}
    {% for notice in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">{{ notice }}</div>
    {% endfor %}

    <h1>Fiche étudiant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Fanampiny</th>
                <td>{{ student.fanampiny }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ student.gender }}</td>
            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ student.classe }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('student_list') }}" class="btn btn-secondary w-66">Voir tous les étudiants</a>
        <div class="d-flex justify-content-end">
            <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-primary w-66">Editer</a>
            {{ include('student/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
