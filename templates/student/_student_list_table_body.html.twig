
<div class="card-body pt-0">
	<!--begin::Table-->
	<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_subscriptions_table">
		<!--begin::Table head-->
		<thead>
			<!--begin::Table row-->
			<tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
				<th class="min-w-60px">Nom</th>
				<th class="min-w-50px">Prénom</th>
				<th class="min-w-8px">Civilité</th>
				<th class="min-w-60px">Classe</th>
				<th class="min-w-45px">Centre</th>
				<th class="text-center min-w-45px">Stats</th>
				<th class="text-end min-w-70px">Actions</th>
			</tr>
			<!--end::Table row-->
		</thead>
		<!--end::Table head-->
		<!--begin::Table body-->
		<tbody class="text-gray-600 fw-bold">

		{% for student in students %}
			<tr>
				<!--begin::Customer=-->
				<td>
					<a href="{{ path('student_show', {'id': student.id}) }}" class="text-gray-800 text-hover-primary mb-1">{{ student.firstname }}</a>
				</td>
				<!--end::Customer=-->
				<!--begin::Billing=-->
				<td>{{ student.lastname }}</td>
				<td>{{ student.gender }}</td>
				{# <td>{% if student.studentClasses %}<a href="{{ path('classe_show', {'id': student.studentClasses.id}) }}" class="text-gray-800 text-hover-primary mb-1">{{ student.studentClasses.name }}</a>{% endif %}</td> #}
				<td>
					{% if student.classe %}
						{{ student.classe.name }}
					{% endif %}
				</td>
				<td>
					{% if student.classe %}
						{{ student.classe.location }}
					{% endif %}
				</td>
				<td>
					{% include 'student/_individual_student_score_stats.html.twig' with { 
						student: students_scores[student.id].student, 
						best_score: students_scores[student.id].best_score, 
						total_score: students_scores[student.id].total_score, 
						average_score: students_scores[student.id].average_score, 
						score_forms: students_scores[student.id].score_forms } 
					%} 
				</td>
				<td class="text-end">
					<a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
					<!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
					<span class="svg-icon svg-icon-5 m-0">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black" />
						</svg>
					</span>
					<!--end::Svg Icon--></a>
					<!--begin::Menu-->
					<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
						<!--begin::Menu item-->
						<div class="menu-item px-3">
							<a href="{{ path('student_show', {'id': student.id}) }}"  class="menu-link px-3">Voir</a>
						</div>
						<!--end::Menu item-->
						<!--begin::Menu item-->
						<div class="menu-item px-3">
							<a href="{{ path('student_edit', {'id': student.id}) }}"  class="menu-link px-3">Modifier</a>
						</div>
						<!--end::Menu item-->
						<!--begin::Menu item-->
						<div class="menu-item px-3">
							<form method="post" action="{{ path('student_delete', {'id': student.id}) }}" onsubmit="return confirm('Attention vous allez supprimer un étudiant');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
								<button class="btn me-3 menu-link px-2" data-kt-users-table-filter="delete_row">Supprimer</button>
							</form>
						</div>
						<!--end::Menu item-->
					</div>
					<!--end::Menu-->
				</td>
				<!--end::Action=-->
			</tr>
		{% endfor %}
		</tbody>
		<!--end::Table body-->
	</table>
	<!--end::Table-->
</div>