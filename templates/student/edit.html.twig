{% extends 'dashboard-base.html.twig' %}

{% block title %}{{ template_title }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div hidden>
        {# {% block logo %}<img alt="Logo" src="../assets/media/logos/logo_pi-planner.png" class="h-25px logo" />{% endblock %} #}
    </div>

    {% for notice in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ notice }}</div>
    {% endfor %}
    {% for notice in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">{{ notice }}</div>
    {% endfor %}

    {{ include('student/_form.html.twig', {'button_label': 'Enregistrer', 'is_edit': true}) }}
        {% include "student/_student_score_form_field.html.twig" %}
    <hr>
    <div class="d-flex justify-content-between">
        {% if previous %}
            <a href="{{ path('student_edit', {'id': previous}) }}" class="btn btn-primary px-3">Précédent</a>
        {% endif %}
        <a href="{{ path('student_list') }}" class="btn btn-secondary w-66">Voir tous les étudiants</a>
        {% if next %}
            <a href="{{ path('student_edit', {'id': next}) }}" class="btn btn-primary px-3">Suivant</a>
        {% endif %}
    </div>
    
{% endblock %}
