{% extends 'dashboard-base.html.twig' %}

{% block favicon %}<link rel="shortcut icon" href="../assets/media/logos/PI-favicon.gif" />{% endblock %}

{% block title %}{{ template_title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div hidden>
	{% block logo %}<img alt="Logo" src="../assets/media/logos/logo_pi-planner.png" class="h-25px logo" />{% endblock %}
</div>

{% for notice in app.flashes('error') %}
	<div class="alert alert-danger" role="alert">{{ notice }}</div>
{% endfor %}

<!--begin::Basic info-->
<div class="card mb-5 mb-xl-10">
	<!--begin::Card header-->
	<div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
		<!--begin::Card title-->
		<div class="card-title m-0">
			<h3 class="fw-bolder m-0">Profile utilisateur</h3>
		</div>
		<!--end::Card title-->
	</div>
	<!--begin::Card header-->
	<!--begin::Content-->
	<div id="kt_account_settings_profile_details" class="collapse show">
		<!--begin::Form-->
		{{ form_start(registrationForm) }}
		<form id="kt_account_profile_details_form" class="form">
			<!--begin::Card body-->
			<div class="card-body border-top p-9">
				<!--begin::Input group-->
				<div class="row mb-6">
					<!--begin::Label-->
					<label class="col-lg-4 col-form-label required fw-bold fs-6">Nom utilisateur</label>
					<!--end::Label-->
					<!--begin::Col-->
					<div class="col-lg-8 fv-row">
						{{ form_widget(registrationForm.name, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
						{{ form_errors(registrationForm.name) }}
					</div>
					<!--end::Col-->
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="row mb-6">
					<!--begin::Label-->
					<label class="col-lg-4 col-form-label required fw-bold fs-6">Email</label>
					<!--end::Label-->
					<!--begin::Col-->
					<div class="col-lg-8 fv-row">
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
						{{ form_errors(registrationForm.email) }}
					</div>
					<!--end::Col-->
				</div>
				<!--end::Input group-->
				<!--begin::Input group-->
				<div class="row mb-6">
					<label class="col-lg-4 col-form-label required fw-bold fs-6">Mot de passe</label>
					<div class="col-lg-8 fv-row">
						{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>
				</div>
				<div class="row mb-6">
					<label class="col-lg-4 col-form-label required fw-bold fs-6">Confirmer le mot de passe</label>
					<div class="col-lg-8 fv-row">
						{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>
				</div>

			</div>
			<!--end::Card body-->
			<!--begin::Actions-->
			<div class="card-footer d-flex justify-content-end py-6 px-9">
				<a type="button" class="btn btn-light me-3" href="{{ list_route }}">Retour Ã  la liste</a>
				<button type="submit" class="btn btn-primary" id="kt_account_profile_details_submit">Enregistrer</button>
			</div>
			<!--end::Actions-->
		{{ form_end(registrationForm) }}
		</form>
		<!--end::Form-->
	</div>
	<!--end::Content-->
</div>
<!--end::Basic info-->

{% endblock %}
