{% extends 'home/index.html.twig' %}

{% block title %}Player{% endblock %}

{% block content %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ player.surname }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ player.team }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ player.price }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('player_index') }}" class="btn btn-secondary w-66">back</a>
        <a href="{{ path('player_edit', {'id': player.id}) }}" class="btn btn-primary w-66">Edit</a>
        {{ include('player/_delete_form.html.twig') }}
    </div>

{% endblock %}
