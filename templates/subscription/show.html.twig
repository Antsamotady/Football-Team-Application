{% extends 'dashboard-base.html.twig' %}

{% block favicon %}<link rel="shortcut icon" href="../assets/media/logos/PI-favicon.gif" />{% endblock %}

{% block title %}{{ template_title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div hidden>
	{% block logo %}<img alt="Logo" src="../assets/media/logos/logo_pi-planner.png" class="h-25px logo" />{% endblock %}
</div>

{% for notice in app.flashes('success') %}
	<div class="alert alert-success" role="alert">{{ notice }}</div>
{% endfor %}
<div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
	<div class="card-header cursor-pointer">
		<div class="card-title m-0">
			<h3 class="fw-bolder m-0">Détail client</h3>
		</div>
		<div class="d-flex justify-content-end">
			<a href="{{ path('list_client') }}" class="btn btn-light-primary align-self-center me-3">Retour à la liste</a>
			<a href="{{ path('edit_client', {'id': client.id}) }}" class="btn btn-primary align-self-center">Modifier</a>
		</div>
		{# <a class="btn btn-primary align-self-center">Modifier</a> #}
	</div>
	<div class="card-body p-9">
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Nom</label>
			<div class="col-lg-8">
				<span class="fw-bolder fs-6 text-gray-800">{{ client.nomClient }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">flagActif</label>
			<div class="col-lg-8 fv-row">
                {% if client.flagActif %}
					<span class="badge badge-light-success">oui</span>
				{% else %}
					<span class="badge badge-light-danger">non</span>
				{% endif %}
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">cleAbo</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.cleAbo }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Nombre de titre(s)</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.nbTitres }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Date date fin</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.dateFin|date('d-m-Y') }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Nombre d'utilisateur(s)</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.nbUsers }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Nombre d'entité(s)</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.nbEntities }}</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Simulation</label>
			<div class="col-lg-8 fv-row">
                {% if client.simulation %}
					<span class="badge badge-light-success">oui</span>
				{% else %}
					<span class="badge badge-light-danger">non</span>
				{% endif %}
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-bold text-muted">Limite annonce</label>
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">{{ client.limitAnnonce }}</span>
			</div>
		</div>
	</div>
</div>
{% endblock %}
