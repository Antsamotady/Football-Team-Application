{% extends 'dashboard-base.html.twig' %}

{% block title %}Matiere{% endblock %}

{% block body %}
    <h1>Matiere</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ matiere.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('matiere_index') }}" class="btn btn-secondary w-66">Voir toutes les matieres</a>
        <div class="d-flex justify-content-end">
            <a href="{{ path('matiere_edit', {'id': matiere.id}) }}" class="btn btn-primary w-66">Editer</a>
            {{ include('matiere/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
